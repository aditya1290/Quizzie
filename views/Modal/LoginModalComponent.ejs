<link rel="stylesheet" href="/css/LoginModals/LoginModal.css">

<div class="ui modal LoginModal">
    <i class="close icon"></i>
    <div class="header">
        <h1>Login</h1>
    </div>
    <div class="ui floating message hidden error" id="LoginMessage1">
        <p>Minimum 8 characters...</p>
      </div>
      <div class="ui floating message hidden error" id="LoginMessage2">
        <p>Email and Password does not match.</p>
      </div>
    <div>
        <div class="d-flex" style="width: 98%;">
            <div class="SideArea SideBorder LeftSide">
                <form method="POST" action="/auth/login" id="LoginFormID">
                    <div class="LabelText">Email</div>
                    <br>
                    <div class="ui input focus w-100">
                        <input type="email" placeholder="abc@xy.z" name="Email" id="LoginEmailInputField" onclick="removeLoginErrors()">
                    </div>

                    <div class="LabelText mt-4 pt-2">Password</div>
                    <br>
                    <div class="ui input focus w-100">
                        <input type="password" name="Password" id='LoginPasswordInputField' placeholder="Minimum 8 characters..." onclick="removeLoginErrors()">
                    </div>

                    <div class="mt-4 pt-2">
                        <button type="submit" class="ui purple button" id="LoginButtonFinal">Enter</button>
                    </div>
                </form>

                <div>
                    <p><button class="TransparentButton" onclick="ForgetPass()">Forget your password?</button></p>
                </div>

            </div>


            <div class="SideArea Grow1">
                <div class="w-100 mt-4 mr-4">
                    <div class="w-100 text-center" style="font-size: 1.2rem;flex:1;"><p>Or Login by</p></div>
                    <div class="d-flex align-items-center flex-column mt-4">  

                        <div>//Social media connections</div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>